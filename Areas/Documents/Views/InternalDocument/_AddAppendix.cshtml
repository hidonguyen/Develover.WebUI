@using Develover.WebUI.Extensions;

<div class="modal fade" id="modal-add-appendix" tabindex="-1" role="dialog" data-backdrop="static" data-keyboard="false" aria-labelledby="Add appendix" aria-hidden="true">
    <div class="modal-dialog modal-lg modal-dialog-centered modal-dialog-scrollable">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Add appendix</h5>
                <button type="button" class="close" onclick="internalDocument.hideAppendixModal();" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form id="modal-add-appendix-form" class="form">
                    @Html.AntiForgeryToken()
                    <input type="hidden" id="Id" name="Id" />
                    <input type="hidden" id="AttachmentId" name="AttachmentId" />
                    <div class="form-group row">
                        <label for="IssueDate" class="col-sm-2 col-form-label col-form-label-sm text-sm-right">Issue Date</label>
                        <div class="field-group col-sm-4">
                            <input type="text" id="IssueDate" name="IssueDate" class="form-control form-control-sm text-center datepicker" />
                            <div class="invalid-feedback"></div>
                        </div>
                        <label for="AppendixNo" class="col-sm-2 col-form-label col-form-label-sm text-sm-right">Appendix No</label>
                        <div class="field-group col-sm-4">
                            <input type="text" id="AppendixNo" name="AppendixNo" class="form-control form-control-sm" />
                            <div class="invalid-feedback"></div>
                        </div>
                    </div>
                    <div class="form-group row">
                        <label for="Title" class="col-sm-2 col-form-label col-form-label-sm text-sm-right">Title</label>
                        <div class="field-group col-sm-10">
                            <input type="text" id="Title" name="Title" class="form-control form-control-sm" />
                            <div class="invalid-feedback"></div>
                        </div>
                    </div>
                    <div class="form-group row">
                        <label for="Description" class="field-group col-sm-2 col-form-label col-form-label-sm text-sm-right">Description</label>
                        <div class="field-group col-sm-10">
                            <textarea id="Description" name="Description" class="form-control form-control-sm"></textarea>
                            <div class="invalid-feedback"></div>
                        </div>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" onclick="internalDocument.hideAppendixModal();">Close</button>
                <button type="button" class="btn btn-primary save" onclick="internalDocument.addAppendix(true);">Add</button>
            </div>
        </div>
    </div>
</div>