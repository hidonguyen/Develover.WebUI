@using Develover.WebUI.Extensions;

<div class="modal fade" id="modal-add-attachment" tabindex="-1" role="dialog" data-backdrop="static" data-keyboard="false" aria-labelledby="Add attachment" aria-hidden="true">
    <div class="modal-dialog modal-lg modal-dialog-centered modal-dialog-scrollable">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Add attachment</h5>
                <button type="button" class="close" onclick="internalDocument.hideModal();" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form id="modal-add-attachment-form" class="form">
                    @Html.AntiForgeryToken()
                    <input type="hidden" id="AttachmentId" name="Id" />
                    <input type="hidden" id="AttachmentOwnerId" name="OwnerId" />
                    <div class="form-group row">
                        <label for="AttachmentAttachFile" class="field-group col-sm-2 col-form-label col-form-label-sm text-sm-right">Attach File</label>
                        <div class="field-group col-sm-10">
                            <input type="file" id="AttachmentAttachFile" name="AttachFile" class="form-control form-control-sm" multiple/>
                            <div class="invalid-feedback"></div>
                        </div>
                    </div>
                    <div class="form-group row">
                        <label for="AttachmentNote" class="field-group col-sm-2 col-form-label col-form-label-sm text-sm-right">Note</label>
                        <div class="field-group col-sm-10">
                            <textarea id="AttachmentNote" name="Note" class="form-control form-control-sm"></textarea>
                            <div class="invalid-feedback"></div>
                        </div>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" onclick="internalDocument.hideModal();">Close</button>
                <button type="button" class="btn btn-primary save" onclick="internalDocument.addAttachment(true);">Add</button>
            </div>
        </div>
    </div>
</div>