@using Develover.WebUI.Entities;
@using Develover.WebUI.Extensions;

@model InboxDocument

@{
    ViewData["Title"] = "New Document";
}

@section Styles
{
    <link href="~/plugins/bootstrap-table/bootstrap-table.min.css" rel="stylesheet" />
    <link href="~/plugins/summernote/dist/summernote.css" rel="stylesheet" />
}

@section Scripts
{
    <script src="~/plugins/bootstrap-table/bootstrap-table.min.js"></script>
    <script src="~/plugins/bootstrap-table/extensions/cookie/bootstrap-table-cookie.min.js"></script>
    <script src="~/bundles/summernote.bundle.js"></script>
    <script src="~/develover/js/documents.js"></script>
    <script src="~/develover/js/documents.inbox.js"></script>

    <script>
        let options = {
            mode: DocumentMode.NEW,
            form: "form-inbox-document",
            tableId: "table-document-attachments",
            modalId: "modal-add-attachment",
            tableAppendixId: "table-document-appendices",
            modalAppendixId: "modal-add-appendix",
        }

        let inboxDocument = new InboxDocument(options, @Json.Serialize(Model));
        inboxDocument.initialize();
    </script>
}

@section Breadcrumb
{
    <h1 class="page-title"><i class="fal fa-suitcase"></i> @ViewData["Title"]</h1>
    <ol class="breadcrumb page-breadcrumb">
        <li class="breadcrumb-item"><a href="/">Home</a></li>
        <li class="breadcrumb-item"><a href="/documents">Documents</a></li>
        <li class="breadcrumb-item"><a href="/documents/inbox">Inbox</a></li>
        <li class="breadcrumb-item active" aria-current="page">New</li>
    </ol>
}

@section Functions
{
    <li class="nav-item">
        <a class="btn btn-outline-secondary btn-sm" title="Cancel (Z+C)" href="javascript:void(0);" data-hotkey="Z+C" onclick="inboxDocument.cancel();">
            <i class="fal fa-ban"></i>
            <span>Cancel</span>
        </a>
    </li>
    <li class="nav-item">
        @Html.SaveButton("inboxDocument.save();")
    </li>
}

@section Tabs
{
    <li class="nav-item"><a class="nav-link active" data-toggle="tab" href="#document-information">Document's Information</a></li>
}

<div class="tab-content">
    <div class="tab-pane fade show active" id="document-information" role="tabpanel">
        <div class="card">
            <div class="card-header py-2 d-flex flex-row-reverse">
                <h3 class="catalog card-title d-none mr-auto"><i class="fal fa-suitcase mr-2"></i> @ViewData["Title"]</h3>
                <div class="catalog card-options">
                    <a href="javascript:void(0)" class="card-options-collapse" data-toggle="card-collapse"><i class="fe fe-chevron-up"></i></a>
                    <a href="javascript:void(0)" class="card-options-fullscreen" data-toggle="card-fullscreen"><i class="fe fe-maximize"></i></a>
                </div>
                <ul class="functions nav nav-tabs page-header-tab d-none">
                    <li class="nav-item">
                        <a class="btn btn-outline-secondary btn-sm" title="Cancel (Z+C)" href="javascript:void(0);" data-hotkey="Z+C" onclick="inboxDocument.cancel();">
                            <i class="fal fa-ban"></i>
                            <span>Cancel</span>
                        </a>
                    </li>
                    <li class="nav-item">
                        @Html.SaveButton("inboxDocument.save();")
                    </li>
                </ul>
            </div>
            <div class="card-body form-horizontal pt-0">
                @await Html.PartialAsync($"~/Areas/Documents/Views/InboxDocument/_Form.cshtml", Model)
            </div>
        </div>
    </div>
</div>
