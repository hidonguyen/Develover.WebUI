@using Develover.WebUI.Entities;
@using Develover.WebUI.Extensions;

@model VehicleRepair

@{
    List<SelectListItem> employees = (List<SelectListItem>)ViewData["Employees"];
}

<div class="modal fade" id="modal-Repairing" tabindex="-1" role="dialog" data-backdrop="static" data-keyboard="false" aria-labelledby="Repairing" aria-hidden="true">
    <div class="modal-dialog modal-lg modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Repair</h5>
                <button type="button" class="close" onclick="vehicleInfo.hideModalRepairing();" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form id="modal-Repairing-form" class="form">
                    @Html.AntiForgeryToken()
                    @Html.HiddenFor(m => m.Id)
                    <div class="form-group row">
                        @Html.LabelFor(m => m.DriverId, htmlAttributes: new { @class = "col-sm-3 col-form-label col-form-label-sm text-sm-right" })
                        <div class="field-group col-sm-9">
                            @Html.SelectPickerFor(m => m.DriverId, employees)
                        </div>
                    </div>
                    <div class="form-group row">
                        @Html.LabelFor(m => m.RepairShop, htmlAttributes: new { @class = "col-sm-3 col-form-label col-form-label-sm text-sm-right" })
                        <div class="field-group col-sm-9">
                            @Html.TextBoxFor(m => m.RepairShop, htmlAttributes: new { @class = "form-control form-control-sm" })
                        </div>
                    </div>
                    <div class="form-group row">
                        @Html.LabelFor(m => m.EstimatedCompletionDate, htmlAttributes: new { @class = "col-sm-3 col-form-label col-form-label-sm text-sm-right" })
                        <div class="field-group col-sm-4">
                            @Html.TextBoxFor(m => m.EstimatedCompletionDate, htmlAttributes: new { @class = "form-control form-control-sm text-center datetimepicker" })
                        </div>
                    </div>
                    <div class="form-group row">
                        @Html.LabelFor(m => m.EstimatedRepairCost, htmlAttributes: new { @class = "col-sm-3 col-form-label col-form-label-sm text-sm-right" })
                        <div class="field-group col-sm-4">
                            @Html.TextBoxFor(m => m.EstimatedRepairCost, htmlAttributes: new { @class = "form-control form-control-sm text-sm-right text-center" })
                        </div>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" onclick="vehicleInfo.hideModalRepairing();">Close</button>
                <button type="button" class="btn btn-primary save" onclick="vehicleInfo.UpdateStatusRepairing();">Repairing</button>
            </div>
        </div>
    </div>
</div>