@{
    ViewData["Title"] = "Thông tin bộ phận";
    ViewData["PageName"] = "department";
    ViewData["Category1"] = "<a href=\"/department\">Danh mục bộ phận</a>";
}

@section HeadBlock {}

<div class="col-xl-12 px-0">
    <div id="panel-department" class="panel">
        <div class="panel-hdr">
            <h2>
                <i class="fal fa-code-branch mr-2"></i> @ViewData["Title"]
            </h2>
            <div class="panel-toolbar">
                <button class="btn btn-panel" data-action="panel-collapse" data-toggle="tooltip" data-offset="0,10" data-original-title="Collapse"></button>
                <button class="btn btn-panel" data-action="panel-fullscreen" data-toggle="tooltip" data-offset="0,10" data-original-title="Fullscreen"></button>
                <button class="btn btn-panel" data-action="panel-close" data-toggle="tooltip" data-offset="0,10" data-original-title="Close"></button>
            </div>
        </div>
        <div class="panel-container show">
            <div class="panel-content">
                <div class="panel-tag">
                    @Html.DeveloverDetailButton()
                </div>
                @await Html.PartialAsync($"~/Views/Department/_Form.cshtml")
            </div>
        </div>
    </div>
</div>

@section ScriptsBlock
{
    <script src="~/develover/js/catalog.js"></script>
    <script src="~/develover/js/catalog.department.js"></script>
}