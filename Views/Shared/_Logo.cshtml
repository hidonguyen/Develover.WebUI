<div class="page-logo">
    @if (ViewBag.AppShortcutModal?.Length > 0)
    {
        <a href="#" class="page-logo-link press-scale-down d-flex align-items-center position-relative" data-toggle="modal" data-target="#modal-shortcut">
            <img src="~/img/@ViewBag.Logo" alt="@ViewBag.AppFlavor" aria-roledescription="logo">
            <span class="page-logo-text mr-1">@ViewBag.AppName</span>
            <span class="position-absolute text-white opacity-50 small pos-top pos-right mr-2 mt-n2">@ViewBag.AppFlavorSubscript</span>
            <i class="fal fa-angle-down d-inline-block ml-1 fs-lg color-primary-300"></i>
        </a>
    }
    else
    {
        <a href="/" class="page-logo-link press-scale-down d-flex align-items-center position-relative">
            <img src="~/img/@ViewBag.Logo" alt="@ViewBag.AppFlavor" aria-roledescription="logo">
            <span class="page-logo-text mr-1">@ViewBag.AppName</span>
            <span class="position-absolute text-white opacity-50 small pos-top pos-right mr-2 mt-n2">@ViewBag.AppFlavorSubscript</span>
        </a>
    }
</div>