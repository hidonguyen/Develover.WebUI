<ol class="breadcrumb page-breadcrumb">
    <li class="breadcrumb-item"><a href="/"><i class="fal fa-home"></i></a></li>
    @if (ViewBag.Category1?.Length > 0)
    {
        <li class="breadcrumb-item mw-100">@Html.Raw(ViewBag.Category1)</li>
    }
    @if (ViewBag.Category2?.Length > 0)
    {
        <li class="breadcrumb-item mw-100">@Html.Raw(ViewBag.Category2)</li>
    }
    <li class="breadcrumb-item mw-100 active">@ViewBag.Title</li>
    <li class="position-absolute pos-top pos-right d-none d-sm-block"><span class="js-get-date"></span></li>
</ol>