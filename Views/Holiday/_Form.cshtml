<form id="form-holiday" class="form was-validated">
    <div class="form-row">
        <div class="col-sm-10">
            @Html.DeveloverTextBox(id: "Name", label: "Tên ngày lễ", placeholder: "Tên ngày lễ", validation: "required", validationMessage: "Tên ngày lễ không được để trống!")
        </div>
    </div>
    <div class="form-row">
        <div class="col-sm-2">
            @Html.DeveloverTextBox(id: "StartDate", label: "Ngày bắt đầu", placeholder: "Ngày bắt đầu", validation: "required", validationMessage: "Ngày bắt đầu không được để trống!")
        </div>
        <div class="col-sm-2">
            @Html.DeveloverTextBox(id: "EndDate", label: "Ngày kết thúc", placeholder: "Ngày kết thúc", validation: "required", validationMessage: "Ngày kết thúc không được để trống!")
        </div>
        <div class="col-sm-2">
            @Html.DeveloverTextBox(id: "NumberOfDays", label: "Số ngày", placeholder: "Số ngày", validation: "required", validationMessage: "Số ngày không được để trống!")
        </div>
    </div>
    <div class="form-row">
        <div class="col-sm-10">
            @Html.DeveloverTextArea(id: "Note", label: "Ghi chú", placeholder: "Ghi chú")
        </div>
    </div>
    <div class="form-row">
        <div class="col-sm-10">
            @Html.DeveloverSwitch("Status", "Sử dụng")
        </div>
    </div>
</form>
