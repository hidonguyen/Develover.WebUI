<form id="form-branch" class="form was-validated">
    <div class="form-row">
        <div class="col-sm-10">
            @Html.DeveloverTextBox(id: "Name", label: "Tên khu vực", placeholder: "Tên khu vực", validation: "required", validationMessage: "Tên khu vực không được để trống!")
        </div>
    </div>
    <div class="form-row">
        <div class="col-sm-4">
            @Html.DeveloverSelect2(id: "DepartmentId", label: "Mã bộ phận")
        </div>
    </div>
    <div class="form-row">
        <div class="col-sm-10">
            @Html.DeveloverTextArea(id: "Note", label: "Ghi chú", placeholder: "Ghi chú")
        </div>
    </div>
    <div class="form-row">
        <div class="col-sm-10">
            @Html.DeveloverSwitch("Status", "Sử dụng")
        </div>
    </div>
</form>
