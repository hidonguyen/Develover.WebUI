@using Develover.WebUI.Entities;

@model Employee

<div class="modal fade" id="modal-employee" tabindex="-1" role="dialog" data-backdrop="static" data-keyboard="false" aria-labelledby="employee" aria-hidden="true">
    <div class="modal-dialog modal-lg modal-dialog-centered modal-dialog-scrollable">
        <div class="modal-content">
            <div class="modal-header">
                <h6 class="modal-title">NEW EMPLOYEE</h6>
                <button type="button" class="close" onclick="employeeModal.hideModal();" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                @await Html.PartialAsync($"~/Views/Catalog/Employee/_Form.cshtml", Model)
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" onclick="employeeModal.hideModal();">Close</button>
                <button type="button" class="btn btn-primary save" onclick="employeeModal.save();">Add</button>
            </div>
        </div>
    </div>
</div>

<script src="~/develover/js/catalog.employee.js"></script>
<script>
    let employeeModalOptions = {
        mode: CatalogMode.NEW,
        form: "form-employee",
        modalId: "modal-employee"
    };

    let employeeModal = new Employee(employeeModalOptions, @Json.Serialize(Model));
    employeeModal.initialize();
</script>
