@using Develover.WebUI.Entities;

@model DocumentType

<div class="modal fade" id="modal-document-type" tabindex="-1" role="dialog" data-backdrop="static" data-keyboard="false" aria-labelledby="document-type" aria-hidden="true">
    <div class="modal-dialog modal-lg modal-dialog-centered modal-dialog-scrollable">
        <div class="modal-content">
            <div class="modal-header">
                <h6 class="modal-title">NEW DOCUMENT TYPE</h6>
                <button type="button" class="close" onclick="documentTypeModal.hideModal();" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                @await Html.PartialAsync($"~/Views/Catalog/DocumentType/_Form.cshtml", Model)
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" onclick="documentTypeModal.hideModal();">Close</button>
                <button type="button" class="btn btn-primary save" onclick="documentTypeModal.save();">Add</button>
            </div>
        </div>
    </div>
</div>

<script src="~/develover/js/catalog.documenttype.js"></script>
<script>
    let documentTypeModalOptions = {
        mode: CatalogMode.NEW,
        form: "form-document-type",
        modalId: "modal-document-type"
    };

    let documentTypeModal = new DocumentType(documentTypeModalOptions, @Json.Serialize(Model));
    documentTypeModal.initialize();
</script>
