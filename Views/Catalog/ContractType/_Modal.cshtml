@using Develover.WebUI.Entities;

@model ContractType

<div class="modal fade" id="modal-contract-type" tabindex="-1" role="dialog" data-backdrop="static" data-keyboard="false" aria-labelledby="contract-type" aria-hidden="true">
    <div class="modal-dialog modal-lg modal-dialog-centered modal-dialog-scrollable">
        <div class="modal-content">
            <div class="modal-header">
                <h6 class="modal-title">NEW CONTRACT TYPE</h6>
                <button type="button" class="close" onclick="contractTypeModal.hideModal();" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                @await Html.PartialAsync($"~/Views/Catalog/ContractType/_Form.cshtml", Model)
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" onclick="contractTypeModal.hideModal();">Close</button>
                <button type="button" class="btn btn-primary save" onclick="contractTypeModal.save();">Add</button>
            </div>
        </div>
    </div>
</div>

<script src="~/develover/js/catalog.contracttype.js"></script>
<script>
    let contractTypeModalOptions = {
        mode: CatalogMode.NEW,
        form: "form-contract-type",
        modalId: "modal-contract-type"
    };

    let contractTypeModal = new ContractType(contractTypeModalOptions, @Json.Serialize(Model));
    contractTypeModal.initialize();
</script>
