@using Develover.WebUI.Entities;

@model DocumentCategory

<div class="modal fade" id="modal-document-category" tabindex="-1" role="dialog" data-backdrop="static" data-keyboard="false" aria-labelledby="document-category" aria-hidden="true">
    <div class="modal-dialog modal-lg modal-dialog-centered modal-dialog-scrollable">
        <div class="modal-content">
            <div class="modal-header">
                <h6 class="modal-title">NEW DOCUMENT CATEGORY</h6>
                <button type="button" class="close" onclick="documentCategoryModal.hideModal();" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                @await Html.PartialAsync($"~/Views/Catalog/DocumentCategory/_Form.cshtml", Model)
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" onclick="documentCategoryModal.hideModal();">Close</button>
                <button type="button" class="btn btn-primary save" onclick="documentCategoryModal.save();">Add</button>
            </div>
        </div>
    </div>
</div>

<script src="~/develover/js/catalog.documentcategory.js"></script>
<script>
    let documentCategoryModalOptions = {
        mode: CatalogMode.NEW,
        form: "form-document-category",
        modalId: "modal-document-category"
    };

    let documentCategoryModal = new DocumentCategory(documentCategoryModalOptions, @Json.Serialize(Model));
    documentCategoryModal.initialize();
</script>
