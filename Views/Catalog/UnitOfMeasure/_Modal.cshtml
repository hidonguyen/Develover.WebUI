@using Develover.WebUI.Entities;

@model UnitOfMeasure

<div class="modal fade" id="modal-unit-of-measure" tabindex="-1" role="dialog" data-backdrop="static" data-keyboard="false" aria-labelledby="UnitOfMeasure" aria-hidden="true">
    <div class="modal-dialog modal-lg modal-dialog-centered modal-dialog-scrollable">
        <div class="modal-content">
            <div class="modal-header">
                <h6 class="modal-title">NEW UNIT OF MEASURE</h6>
                <button type="button" class="close" onclick="unitofmeasureModal.hideModal();" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                @await Html.PartialAsync($"~/Views/Catalog/UnitOfMeasure/_Form.cshtml", Model)
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" onclick="unitofmeasureModal.hideModal();">Close</button>
                <button type="button" class="btn btn-primary save" onclick="unitofmeasureModal.save();">Add</button>
            </div>
        </div>
    </div>
</div>

<script src="~/develover/js/catalog.unitofmeasure.js"></script>
<script>
    let unitofmeasureModalOptions = {
        mode: CatalogMode.NEW,
        form: "form-unit-of-measure",
        modalId: "modal-unit-of-measure"
    };

    let unitofmeasureModal = new UnitOfMeasure(unitofmeasureModalOptions, @Json.Serialize(Model));
    unitofmeasureModal.initialize();
</script>
