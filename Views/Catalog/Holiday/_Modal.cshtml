@using Develover.WebUI.Entities;

@model Holiday

<div class="modal fade" id="modal-holiday" tabindex="-1" role="dialog" data-backdrop="static" data-keyboard="false" aria-labelledby="holiday" aria-hidden="true">
    <div class="modal-dialog modal-lg modal-dialog-centered modal-dialog-scrollable">
        <div class="modal-content">
            <div class="modal-header">
                <h6 class="modal-title">NEW HOLIDAY</h6>
                <button type="button" class="close" onclick="holidayModal.hideModal();" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                @await Html.PartialAsync($"~/Views/Catalog/Holiday/_Form.cshtml", Model)
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" onclick="holidayModal.hideModal();">Close</button>
                <button type="button" class="btn btn-primary save" onclick="holidayModal.save();">Add</button>
            </div>
        </div>
    </div>
</div>

<script src="~/develover/js/catalog.holiday.js"></script>
<script>
    let holidayModalOptions = {
        mode: CatalogMode.NEW,
        form: "form-holiday",
        modalId: "modal-holiday"
    };

    let holidayModal = new Holiday(holidayModalOptions, @Json.Serialize(Model));
    holidayModal.initialize();
</script>
