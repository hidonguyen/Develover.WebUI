@using Develover.WebUI.Entities;

@model ChangePasswordViewModel

@{
    ViewData["Title"] = "Change Password";
}

@section Styles
{
}

@section Scripts
{
    <script src="~/develover/js/catalog.user.change-password.js"></script>
}

@section Breadcrumb
{
    <h1 class="page-title"><i class="fal fa-key-skeleton"></i> @ViewData["Title"]</h1>
    <ol class="breadcrumb page-breadcrumb">
        <li class="breadcrumb-item"><a href="/">Home</a></li>
        <li class="breadcrumb-item">@Html.ActionLink("Profile", "profile", "identity", new { @id= @Model.Id })</li>
        <li class="breadcrumb-item active" aria-current="page">Change Password</li>
    </ol>
}

@section Functions
{
}

@section Tabs
{
    <li class="nav-item">
        <a class="nav-link active" id="pills-changepassword-tab" data-toggle="pill" href="#pills-changepassword" role="tab" aria-controls="pills-changepassword" aria-selected="true">Change Password</a>
    </li>
}
<div class="row clearfix">
    <div class="col-md-12">
        <div class="tab-content" id="pills-tabContent">
            <div class="tab-pane fade" id="pills-calendar" role="tabpanel" aria-labelledby="pills-calendar-tab">
                <div class="card">
                    <div class="card-body">
                        <div id="calendar"></div>
                    </div>
                </div>
            </div>
            <div class="tab-pane fade active show" id="pills-changepassword" role="tabpanel" aria-labelledby="pills-changepassword-tab">
                <div class="card">
                    <div class="card-header">
                        <h3 class="card-title">Change Password</h3>
                        <div class="card-options">
                            <a href="javascript:void(0)" class="card-options-collapse" data-toggle="card-collapse"><i class="fe fe-chevron-up"></i></a>
                            <a href="javascript:void(0)" class="card-options-fullscreen" data-toggle="card-fullscreen"><i class="fe fe-maximize"></i></a>
                        </div>
                    </div>
                    <form id="changepassword-form" class="form">
                        <div class="card-body form-horizontal">
                            @Html.AntiForgeryToken()
                            @Html.ValidationSummary(true)
                            @Html.HiddenFor(m => m.ReturnUrl)
                            @Html.HiddenFor(m => m.Username)
                            @Html.HiddenFor(m => m.Id)

                            <div class="form-group row">
                                @Html.LabelFor(m => m.Username, htmlAttributes: new { @class = "col-sm-2 col-form-label col-form-label-sm text-sm-right" })
                                <div class="field-group col-sm-10">
                                    @Html.PasswordFor(m => m.OldPassword, new { @class = "form-control form-control-sm", @placeholder = "Current password" })
                                    <div class="invalid-feedback"></div>
                                </div>
                            </div>
                            <div class="form-group row mt-3">
                                <div class="offset-2 field-group col-sm-10">
                                    <div style="font-size: 80%;">Password must be 8 characters including at least one number, both lower and uppercase letters and special characters</div>
                                </div>
                            </div>
                            <div class="form-group row">
                                @Html.LabelFor(m => m.Password, htmlAttributes: new { @class = "col-sm-2 col-form-label col-form-label-sm text-sm-right" })
                                <div class="field-group col-sm-10">
                                    @Html.PasswordFor(m => m.Password, new { @class = "form-control form-control-sm", @placeholder = "New password" })
                                    <div class="invalid-feedback"></div>
                                </div>
                            </div>
                            <div class="form-group row">
                                @Html.LabelFor(m => m.ConfirmPassword, htmlAttributes: new { @class = "col-sm-2 col-form-label col-form-label-sm text-sm-right" })
                                <div class="field-group col-sm-10">
                                    @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control form-control-sm", @placeholder = "Confirm password" })
                                    <div class="invalid-feedback"></div>
                                </div>
                            </div>
                        </div>

                        <div class="card-footer text-right">
                            <a class="btn btn-primary" title="Change Password" href="javascript:void(0);" onclick="changepassword($('#changepassword-form'));">
                                <i class="fal fa-key-skeleton"></i>
                                <span>Change</span>
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
